{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true
  },
  "include": [                                /* 需要编译的文件 */
    "./routes/*.ts",
    "./*.ts",
    "./**/*"
  ],
  "exclude": [                                /* 编译需要排除的文件 */
    "node_modules/**"
  ]
}
